{% extends 'base.html.twig' %}

{% block title %}Hello WineryController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="winery-wrapper">
    <h1>Winery</h1>
    <div class="winery-description">
    <h2>Name : {{ winery.name ?? 'no name yet' }}</h2>
    <p>Description : {{ winery.description ?? 'no description yet' }}</p>
    <p>Number of employees : {{ winery.numberOfEmployees ?? 'no number of employees yet' }}</p>
    {% if winery.ImageFileName %}
    <img class="winery-image" src="{{ asset('uploads/winery_image/' ~ winery.ImageFileName) }}"/>
    {% endif %}
    {% if isowner %}
     <a  href="/winery/{{winery.id}}/edit">edit my winery</a>
    {% endif %}
    </div>
</div>
{% endblock %}
