{% extends 'base.html.twig' %}

{% block title %}Hello UserFavoriteWineController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Your favorites wine</h1>

    {% for wine in favorite %}
                <div class="wine-item">
                <h2>{{ wine.wine.name }}</h2>
                {% if wine.wine.ImageFileName %}
                    <img class="wine-image" src="{{ asset('uploads/wine_image/' ~ wine.wine.ImageFileName) }}"/>
                {% else %}
                    <img class="wine-image" src="/image/vin.jpeg"/>
                {% endif %}
                <p>{{ wine.wine.region }}</p>
                <td>
                    <a href="{{ path('app_wine_show', {'id': wine.wine.id}) }}">show</a>
                </td>
            </div>
    {% endfor %}
</div>
{% endblock %}
