{% extends 'base.html.twig' %}

{% block title %}Wine index{% endblock %}

{% block body %}
    <h1>Wine index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Region</th>
                <th>AlcoholContent</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for wine in wines %}
            <tr>
                <td>{{ wine.id }}</td>
                <td>{{ wine.name }}</td>
                <td>{{ wine.region }}</td>
                <td>{{ wine.alcoholContent }}</td>
                <td>{{ wine.description }}</td>
                <td>
                    <a href="{{ path('app_wine_show', {'id': wine.id}) }}">show</a>
                    <a href="{{ path('app_wine_edit', {'id': wine.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
            {{app.user ? app.user.email : 'no user'}}
        {% endfor %}
        </tbody>
    </table>
    {% if app.user %}
    <a href="{{ path('app_wine_new') }}">Create new</a>
    {% endif %}
{% endblock %}
