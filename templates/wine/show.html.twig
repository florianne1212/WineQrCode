    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ wine.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ wine.name }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ wine.region }}</td>
            </tr>
            <tr>
                <th>AlcoholContent</th>
                <td>{{ wine.alcoholContent }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ wine.description }}</td>
            </tr>

               <tr>
                <th>RESULT</th>
                {% if result%}
                <td> {{ result }} </td>
                {% endif %}
            </tr>

        </tbody>
    </table>
    <img src="{{qrCode}}"></img>
